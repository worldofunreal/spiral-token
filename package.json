{
  "name": "spiral-token",
  "version": "1.0.0",
  "description": "Cross-chain Spiral Token on Ethereum and Solana",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "$HOME/.config/.foundry/versions/stable/forge build",
    "test": "$HOME/.config/.foundry/versions/stable/forge test",
    "test:verbose": "$HOME/.config/.foundry/versions/stable/forge test -vvv",
    "test:gas": "$HOME/.config/.foundry/versions/stable/forge test --gas-report",
    "deploy": "hardhat run scripts/deploy-evm.js",
    "deploy:solana": "node scripts/deploy-solana.js",
    "set-remotes": "hardhat run scripts/set-trusted-remote.js"
  },
  "devDependencies": {
    "@layerzerolabs/lz-evm-sdk-v1-0.7": "^1.5.16",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^3.0.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.4",
    "better-sqlite3": "^11.10.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0"
  }
}
